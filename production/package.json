{
	"name": "express-jwt-boilerplate",
	"version": "1.0.0",
	"description": "Express boilerplate with JWT authentication and TypeScript",
	"main": "server",
	"scripts": {
		"build": "tsc && cp configs/*.yml dist/configs/",
		"dev": "cross-env NODE_ENV=development nodemon --exec ts-node server.ts",
		"lint": "eslint .",
		"staging": "export NODE_ENV=staging && nodemon --exec ts-node server.ts",
		"start": "node dist/server",
		"test": "NODE_ENV=development TEST_PORT=8008 mocha --timeout 10000 --import=tsx api/v1/tests/**/**.test.ts api/v1/tests/**/**/**.test.ts --exit",
		"test-staging": "NODE_ENV=staging TEST_PORT=8008 mocha --timeout 20000 --import=tsx api/v1/tests/**/**.test.ts api/v1/tests/**/**/**.test.ts --exit",
		"typedoc": "typedoc --placeInternalsInOwningModule --tsconfig tsconfig.json --out dist/docs",
		"build:typedoc": "npm run build && npm run typedoc"
	},
	"devDependencies": {
		"@types/bcryptjs": "^2.4.6",
		"@types/body-parser": "^1.19.5",
		"@types/chai": "^4.3.18",
		"@types/cors": "^2.8.17",
		"@types/express": "^4.17.25",
		"@types/js-yaml": "^4.0.9",
		"@types/jsonwebtoken": "^9.0.6",
		"@types/mocha": "^10.0.6",
		"@types/node": "^20.12.7",
		"@types/pg": "^8.15.6",
		"@types/react": "^18.3.27",
		"@types/react-dom": "^18.3.7",
		"@types/supertest": "^6.0.2",
		"@typescript-eslint/eslint-plugin": "^7.14.1",
		"@typescript-eslint/parser": "^7.14.1",
		"chai": "^5.1.1",
		"mocha": "^10.4.0",
		"nodemon": "^3.1.0",
		"supertest": "^7.0.0",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"tsx": "^4.15.2",
		"typedoc": "^0.25.13",
		"typedoc-plugin-missing-exports": "^2.2.0",
		"typedoc-plugin-rename-defaults": "^0.7.0",
		"typescript": "^5.4.4"
	},
	"dependencies": {
		"@sentry/node": "^8.42.0",
		"@types/node-forge": "^1.3.11",
		"@types/pg-format": "^1.0.5",
		"@types/uuid": "^10.0.0",
		"axios": "^1.7.7",
		"bcryptjs": "^3.0.3",
		"body-parser": "^1.20.3",
		"cors": "^2.8.5",
		"crypto": "^1.0.1",
		"dayjs": "^1.11.13",
		"ejs": "^3.1.10",
		"eslint": "^8.57.0",
		"express": "^4.21.2",
		"helmet": "^7.1.0",
		"js-yaml": "^4.1.1",
		"jsonwebtoken": "^9.0.2",
		"module-alias": "^2.2.3",
		"node-forge": "^1.3.1",
		"pg": "^8.16.3",
		"pg-format": "^1.0.4",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"uuid": "^10.0.0",
		"zod": "^3.23.8",
		"zod-validation-error": "^3.3.1"
	}
}
