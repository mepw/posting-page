{
  "ts-node": {
    "require": ["tsconfig-paths/register"] /* To make the paths work */
  },
  "compilerOptions": {
    "target": "ES6",                       /* Compile to ES6 */
    "module": "CommonJS",                  /* Node.js module system */
    "strict": true,                        /* Enable all strict type checks */
    "esModuleInterop": true,               /* Import CommonJS modules */
    "skipLibCheck": true,                  /* Skip type checking of declaration files */
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
    "lib": ["ES2015", "DOM", "DOM.Iterable"], /* Needed for Iterable, NodeList, etc. */
    "moduleResolution": "node",
    "resolveJsonModule": true,             /* Optional: import JSON files */
    "jsx": "react-jsx"                      /* Needed if you have React components */
  },
  "include": ["./**/*.ts", "./**/*.tsx"],  /* Include TSX for React components */
  "exclude": ["node_modules/**/*"],
  "typedocOptions": {
    "entryPoints": [
      "api/v1/controllers/*",
      "api/v1/services/*",
      "api/v1/models/*",
      "api/v1/helpers/*"
    ],
    "out": "docs",
    "excludeExternals": true,
    "plugin": ["typedoc-plugin-missing-exports", "typedoc-plugin-rename-defaults"]
  }
}
