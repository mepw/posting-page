{
  "compilerOptions": {
    "target": "ES6",
    "module": "node16",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
    "ignoreDeprecations": "6.0",  
    "lib": ["ES2015", "DOM", "DOM.Iterable"],
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "jsx": "react-jsx"
  },
  "include": ["./**/*.ts", "./**/*.tsx"],
  "exclude": ["node_modules/**/*"]
}
