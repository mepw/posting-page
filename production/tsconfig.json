{
    "ts-node": {
    	"require": ["tsconfig-paths/register"] /* To make the paths work */
    },
    "compilerOptions": {
      	"target": "ESNext", /* Compiles to the latest ECMAScript standard available. */
      	"module": "CommonJS", /* Generates code using the CommonJS module system, commonly used in Node.js. */
      	"strict": true,
      	"esModuleInterop": true,
      	"skipLibCheck": true,
      	"forceConsistentCasingInFileNames": true,
      	"outDir": "./dist",
      	"rootDir": "./" ,
      	"baseUrl": "./"
    },
    "include": ["./**/*.ts"],
    "exclude": [
		"node_modules/**/*"
	],
    "typedocOptions": {
      	"entryPoints": ["api/v1/controllers/*", "api/v1/services/*", "api/v1/models/*", "api/v1/helpers/*"],
      	"out": "docs",
      	"excludeExternals": true,
      	"plugin": ["typedoc-plugin-missing-exports", "typedoc-plugin-rename-defaults"]
    }
}