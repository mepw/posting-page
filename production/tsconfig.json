{
  "compilerOptions": {
    "target": "ES6",
    "module": "node16",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "lib": ["ES2015", "DOM", "DOM.Iterable"],
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
   "types": ["node", "jest", "@types/nodemailer"]
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
    "production/api/v1/helpers/nodemailer.d.ts"
  ],
  "exclude": ["node_modules/**/*"]
}
